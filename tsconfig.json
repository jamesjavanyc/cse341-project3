{
  "compilerOptions": {
    "paths": {
      "@controller/*":["src/controller/*"],
      "@model/*":["src/model/*"],
      "@routes/*":["src/routes/*"],
      "@utils/*":["src/utils/*"]
    },
    "lib": ["es2018", "esnext.asynciterable"],
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/ts",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode"]
}
